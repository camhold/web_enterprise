<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-inherit="web.res_config_edition" t-inherit-mode="extension">

        <xpath expr="//h3" position="replace">
            <h3 class="px-0">
                DbT Palmera ERP
            </h3>
        </xpath>

        <xpath expr="//*[@id='license']" position="replace">
            <a id="license" target="_blank" href="" style="text-decoration: underline;">DBT Palmera ERP License V1.0</a>
        </xpath>

        <xpath expr="//h3" position="after">
            <t t-if="expirationDate">
                <h5>Database expiration: Depends on dbt company subscription number</h5>
            </t>
        </xpath>

    </t>

</templates>
